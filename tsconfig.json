{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "allowJs": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
}